#!/usr/bin/env bash
# Open an exit menu with confirmation in rofi

confirm() {
    echo -e "Yes\nNo" | rofi -dmenu -i -format d -lines 2 -selected-row 0 -p "${1:-Confirm: }" -theme themes/menu.rasi
}

quit=" Quit awesome"
shutdown=" Shutdown"
reboot=" Reboot"
suspend=" Suspend"
hibernate=" Hibernate"

LAUNCHER="rofi -dmenu -i -lines 5 -p Exit:  -theme themes/menu.rasi"
OPTIONS="$quit\n$shutdown\n$reboot\n$suspend\n$hibernate"

selection=$(echo -e $OPTIONS | $LAUNCHER)
case $selection in
    $quit)
        awesome quit ;;
    $shutdown)
        [[ $(confirm) = 1 ]] && (systemctl poweroff) ;;
    $reboot)
        [[ $(confirm) = 1 ]] && (systemctl reboot) ;;
    $suspend)
        [[ $(confirm) = 1 ]] && (systemctl suspend) ;;
    $hibernate)
        [[ $(confirm) = 1 ]] && (systemctl hibernate) ;;
esac
